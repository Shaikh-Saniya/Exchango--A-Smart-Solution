<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="horizontal"
    android:gravity="start"
    android:layout_marginVertical="4dp">

    <ImageView
        android:id="@+id/senderImageView"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/home_ic_person_round_bg"
        android:src="@drawable/all_ic_person_white" /> <!-- Default image -->

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/chatscreen_send_msg_bg"
        android:padding="10dp"
        android:layout_marginStart="2dp"
        android:layout_gravity="end"
        android:orientation="vertical">

        <TextView
            android:id="@+id/sentMessageTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/zen_antique"
            android:text="Hello Saniya"
            android:textColor="@color/white" />


    </LinearLayout>
    <TextView
        android:id="@+id/sentMessageTimestamp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="top"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:text="12:00"
        android:fontFamily="@font/zen_antique"
        android:textColor="@color/gray"
        android:textSize="11sp" />
</LinearLayout>
